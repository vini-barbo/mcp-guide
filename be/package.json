{
  "name": "nestjs-clean-architecture",
  "version": "1.0.0",
  "description": "A NestJS application following Clean Architecture principles with PostgreSQL, Prisma, Docker, and Swagger.",
  "main": "src/main.ts",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:e2e": "jest --config test/jest-e2e.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "class-validator": "^0.13.2",
    "class-transformer": "^0.5.0",
    "prisma": "^3.0.0",
    "@prisma/client": "^3.0.0",
    "swagger-ui-express": "^4.1.6",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "typescript": "^4.5.4",
    "jest": "^27.0.0",
    "ts-jest": "^27.0.0",
    "@types/jest": "^27.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "prettier": "^2.5.1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}